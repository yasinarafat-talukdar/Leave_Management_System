@model LeaveManagement.Models.LeaveType
@{
    ViewData["Title"] = "Create Leave Type";
}
<h2>Create Leave Type</h2>
<form asp-action="Create" method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DefaultDays" class="form-label"></label>
        <input asp-for="DefaultDays" class="form-control" />
        <span asp-validation-for="DefaultDays" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>
    <button class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
 }