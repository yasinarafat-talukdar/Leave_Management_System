@model IEnumerable<LeaveManagement.Models.LeaveType>
@{
    ViewData["Title"] = "Leave Types";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Leave Types</h2>
    <a class="btn btn-primary" asp-action="Create">Create</a>
</div>
<table class="table table-striped">
    <thead><tr><th>Name</th><th>Default Days</th><th>Active</th><th></th></tr></thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Name</td>
                <td>@t.DefaultDays</td>
                <td>@t.IsActive</td>
                <td>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@t.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@t.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>