@model LeaveManagement.Models.LeaveRequest
@{
    ViewData["Title"] = "Request Details";
}
<h2>Request Details</h2>
<dl class="row">
    <dt class="col-sm-3">Requester</dt>
    <dd class="col-sm-9">@Model.RequestingUserId</dd>
    <dt class="col-sm-3">Type</dt>
    <dd class="col-sm-9">@Model.LeaveType?.Name</dd>
    <dt class="col-sm-3">Dates</dt>
    <dd class="col-sm-9">@Model.StartDate:yyyy-MM-dd → @Model.EndDate:yyyy-MM-dd</dd>
    <dt class="col-sm-3">Days</dt>
    <dd class="col-sm-9">@Model.DaysRequested</dd>
    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.Status</dd>
    <dt class="col-sm-3">Reason</dt>
    <dd class="col-sm-9">@Model.Reason</dd>
</dl>
<a class="btn btn-secondary" onclick="history.back()">Back</a>